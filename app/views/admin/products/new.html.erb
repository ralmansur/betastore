<%= form_for [:admin, @product] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :image_url %>
  <%= f.text_field :image_url %>
  <%= f.submit %>
<% end %>

<% for error in @product.errors.full_messages %>
  <div class="error"><%= error %></div>
<% end %>


<a href="<%= admin_products_path %>">Go Back to Index</a>


